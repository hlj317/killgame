/**home.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  overflow: hidden;
}
.title{
    color:#000000;
    padding-left:15rpx;
}
.code{
    margin:0;
    line-height:20rpx;
    padding-top:8rpx;
    padding-bottom:25rpx;
    border-bottom:1px solid #ededed;
    width:100%;
    padding-left:15rpx;
    display: flex;
    flex-direction: row;
}
.code-num{
    color:#a5a5a5;
    font-size: 20rpx;
}
.code-ratio{
    color:#ff8b66;
    font-size: 20rpx;
    margin-left:10rpx;
}
.goto-detail{
    color:#3f76c9;
    font-size:28rpx;
    margin-left:auto;
    margin-right:30rpx;
}
.sum{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items:center;
    width:100%;
}
.sum-text{
    color:#777777;
    font-size: 30rpx;
    margin-top:20rpx;
}
.sum-money{
    color:#e5521e;
    font-weight:bold;
    font-size:70rpx;
    margin-top:5rpx;
}
.overall{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items:center;
    width:100%;
    padding:20rpx 0 40rpx 0;
    border-bottom:10px solid #eeeeee;
    color:#929292;
}
.overall-today{
    text-align: center;
    font-size: 24rpx;
    border-right:1px solid #ededed;
    padding-right:25rpx;
}
.overall-today-num{
    color:#16967f;
    font-weight: bold;
}
.overall-remain{
    text-align: center;
    font-size: 24rpx;
    border-right:1px solid #ededed;
    margin-left:25rpx;
    padding-right:25rpx;
}
.overall-remain-num{
    color:#16967f;
    font-weight: bold;
}
.overall-profit{
    text-align: center;
    font-size: 24rpx;
    border-right:1px solid #ededed;
    margin-left:25rpx;
    padding-right:25rpx;
}
.overall-profit-num{
    color:#16967f;
    font-weight: bold;
}
.overall-capital{
    text-align: center;
    margin-left:25rpx;
    font-size: 24rpx;
}
.overall-capital-num{
    color:#999999;
    font-weight: bold;
}
.total-income{
    margin:15rpx 0 20rpx 35rpx;
    font-size: 24rpx;
    color:#929292;
}
.total-income-num{
    color:#16967f;
    font-weight: bold;
}
.earn{
    color:#e5521e;
}
canvas{
    height:375rpx;
    width:1000rpx;
}

